<!DOCTYPE html>
<html>

    <head>
        <title>
            TicketTac
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>

    <body>

        <%- include('header'); %>

            <div class="container homepage-section ">
                <div class="row justify-content-center ">



                    <% if( tickets.length>0){%>


                        <h2 class="text-white my-4">My last trips : </h2>
                        <table class="table bg-white table-borderless tabletickets ">
                            <thead>
                                <tr class="fw-bold">

                                    <th scope="col">Date</th>
                                    <th scope="col">Journey</th>
                                    <th scope="col">Departure time</th>
                                    <th scope="col">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% tickets.forEach(ticket=>{
                                    %>
                                    <tr>
                                        <td>
                                            <%=ticket.date.toLocaleDateString('fr-FR')%>
                                        </td>
                                        <td>
                                            <%=ticket.departure%>/
                                                <%=ticket.arrival%>
                                        </td>
                                        <td>
                                            <%=ticket.departureTime%>
                                        </td>
                                        <td>
                                            <%=ticket.price%> â‚¬
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>

                        </table>
                        <% }else{%>
                            <h2 class="text-white my-4">Sorry, no last trip found !</h2>

                            <%}%>



                                <div class="d-flex justify-content-end"><a href="/homepage" class="btn btn-danger d-flex justify-content-end">Home</a></div>

                </div>


            </div>


            </p>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>
