          </form>

        </div>

        <div class="col-4">

          <form action="/users/sign-up" method="post" class="text-center">
            <h2 class="text-white my-4">Sign-up:</h2>
            <input class="form-control form-control-lg  my-3" type="text" placeholder="Name" name="nameFromFront">
            <input class="form-control form-control-lg  my-3" type="text" placeholder="FirstName" name="firstNameFromFront">
            <input class="form-control form-control-lg  my-3" type="text" placeholder="Email" name="emailFromFront">
            <input class="form-control form-control-lg  my-3" type="password" placeholder="Password" name="passwordFromFront">
