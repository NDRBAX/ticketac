    <div class="container main-section ">
      <div class="row justify-content-center ">
        <div class="col-4">

          <form action="/users/sign-in" method="post" class="text-center">
            <h2 class="text-white my-4">Sign-in:</h2>
            <input class="form-control form-control-lg my-3" type="text" placeholder="Email" name="emailFromFront">
            <input class="form-control form-control-lg my-3" type="password" placeholder="Password" name="passwordFromFront">
