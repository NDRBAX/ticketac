<!DOCTYPE html>
<html>

    <head>
        <title>
            TicketTac
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>

    <body>

        <%- include('header'); %>

            <div class="container homepage-section ">
                <div class="row justify-content-center ">

                    <h2 class="text-white my-4">My tickets :</h2>


                    <table class="table bg-white table-borderless tabletickets ">
                        <thead>
                            <tr class="fw-bold">
                                <th scope="col">N°</th>
                                <th scope="col">Journey</th>
                                <th scope="col">Date</th>
                                <th scope="col">Departure time</th>
                                <th scope="col">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let total=0; tickets.forEach((ticket,i)=> {
                                total+=ticket.price;
                                %>
                                <tr>
                                    <th scope="row">
                                        <%=i+1%>
                                    </th>
                                    <td>
                                        <%=ticket.departure%> /
                                            <%=ticket.arrival%>
                                    </td>
                                    <td>
                                        <%=ticket.date%>
                                    </td>
                                    <td>
                                        <%=ticket.departureTime%>
                                    </td>
                                    <td>
                                        <%=ticket.price%> €
                                    </td>
                                </tr>
                                <%})%>

                        </tbody>
                        <tfoot style="background-color: rgb(253, 191, 191)">
                            <tr class="fw-bold">
                                <th scope="col">Total</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col">
                                    <%=total%> €
                                </th>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="d-flex justify-content-end"><button type="button" class="btn btn-danger d-flex justify-content-end" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            Confirm
                        </button></div>



                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Checkout</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Voulez vous vraiment confirmer votre achat ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                    <a href="homepage" type="button" class="btn btn-primary">Confimer</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>


            </p>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>
