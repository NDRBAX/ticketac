<!DOCTYPE html>
<html>

<head>
    <title>
        TicketTac
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

    <%- include('header'); %>

        <div class="container homepage-section ">
            <div class="row justify-content-center ">

                <h2 class="text-white my-4">Tickets available on
                    <%=tickets[0].date.toLocaleDateString('fr-FR')%>
                </h2>
                <ul class="list-group">
                    <% if(tickets!=undefined && tickets!=null&&tickets.length>0) {tickets.forEach(ticket=> {%>
                        <li class="list-group-item d-flex  justify-content-between align-items-center my-2 rounded">
                            <span class="fw-bold">
                                    <%=ticket.departure%>/<%=ticket.arrival%>
                                </span>
                            <span>Train departure at : <%=ticket.departureTime%></span>
                            <div class="d-flex align-items-center"><span class="fw-bold fs-5  align-items-center me-4">
                                        <%=ticket.price%> €
                                    </span><a href="/add-ticket?ticketId=<%=ticket._id%> " class="btn btn-danger">OK</a></div>
                        </li>
                        <%})}else{%>
                            <p>ya rien</p>
                            <%} %>

                                <li class="list-group-item d-flex  justify-content-between align-items-center my-2 rounded">
                                    <span class="fw-bold">Paris/Lille</span>
                                    <span>Train departure at : 15 pm</span>
                                    <div class="d-flex align-items-center"><span class="fw-bold fs-5  align-items-center me-4">93€</span><button class="btn btn-danger">OK</button></div>
                                </li>
                </ul>


            </div>


        </div>


        </p>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>